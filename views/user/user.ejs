<% layout("/user/navbar") %>
<%- include('../partials/flash') %>
<div class="container my-5">
  <div class="row">
    <!-- Profile Picture Section -->
    <div class="col-md-4 text-center">
      <div class="card shadow-sm">
        <div class="card-body">
          <img src="<%= user.profilePic  %>" alt="Profile Picture" class="img-thumbnail mb-3" width="200">
          <form action="/user/profile-pic" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="profilePic" class="form-label">Change Profile Picture</label>
              <input type="file" name="profilePic" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Upload</button>
          </form>
        </div>
      </div>
    </div>

    <!-- User Details Section -->
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">User Details</h2>
        </div>
        <div class="card-body">
          <% const fields = [
            {label: "Name", value: user.name},
            {label: "Email", value: user.email || "-"},
            {label: "Number", value: user.number},
            {label: "Seat", value: user.seat ? user.seat.seatNo : "N/A"},
            {label: "Membership", value: user.membershipType},
            {label: "Plan", value: user.plan},
            {label: "Shift", value: user.shift},
            {label: "Fees", value: "â‚¹" + user.fees},
            {label: "Start Date", value: user.startDate ? user.startDate.toLocaleDateString("en-GB") : "-"},
            {label: "End Date", value: user.endDate ? user.endDate.toLocaleDateString("en-GB") : "-"}
          ]; %>

          <% fields.forEach(field => { %>
            <div class="row mb-2">
              <div class="col-sm-4 fw-bold"><%= field.label %>:</div>
              <div class="col-sm-8"><%= field.value %></div>
            </div>
          <% }) %>
        </div>

        <!-- Card footer with conditional Pay Fees button -->
        <div class="card-footer text-end">
          <% if (user.startDate && user.endDate) { 
               const diffInDays = Math.floor((user.endDate - user.startDate) / (1000 * 60 * 60 * 24));
               if (diffInDays < 3) { %>
                 <a href="/user/<%= user._id %>/pay-fees" class="btn btn-success">Pay Fees</a>
          <%   } 
             } %>
        </div>
      </div>
    </div>
  </div>
</div>
