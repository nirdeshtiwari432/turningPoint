<% layout("/admin/navbar") %>

<div class="container my-4">
  <div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <span>Seat Details</span>
      <form method="GET" action="/admin/seats" class="d-flex">
        <select name="filter" class="form-select me-2">
          <option value="">All</option>
          <option value="booked" <%= filter === "booked" ? "selected" : "" %>>Booked</option>
          <option value="notBooked" <%= filter === "notBooked" ? "selected" : "" %>>Not Booked</option>
          <option value="registered" <%= filter === "registered" ? "selected" : "" %>>Registered</option>
          <option value="notRegistered" <%= filter === "notRegistered" ? "selected" : "" %>>Not Registered</option>
        </select>
        <button type="submit" class="btn btn-light">Filter</button>
      </form>
    </div>
    <div class="card-body">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>Seat No</th>
            <th>Is Booked</th>
            <th>Booked By</th>
            <th>Timing</th>
            <th>Book</th>
          </tr>
        </thead>
        <tbody>
          <% seats.forEach(seat => { %>
            <tr>
              <td><%= seat.seatNo %></td>
              <td><%= seat.isBooked ? "Yes" : "No" %></td>
              <td>
                <% if (seat.bookedBy && seat.bookedBy.name) { %>
                  <%= seat.bookedBy.name %>
                <% } else { %>
                  -
                <% } %>
              </td>
              <td><%= seat.timing ? seat.timing.replace("_", " ") : "-" %></td>
              <td>
                <form action="/admin/new/<%= seat._id %>/<%=seat.seatNo %>">
                 <button class="btn btn-primary" action = "/admin/new">Book</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
